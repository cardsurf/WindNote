<UserControl x:Class="WindNote.Gui.UserControls.DragableRowHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel x:Name="RowHeader"
                Height="Auto"
                Width="Auto"
                Background="Transparent"
                AllowDrop="True"
                Cursor="pack://application:,,,/WindNote;component/resources/cursors/grab.cur">
        <Image Source="pack://application:,,,/WindNote;component/resources/images/scaled_navigation_arrows.png"
               Width="40"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Cursor="pack://application:,,,/WindNote;component/resources/cursors/grab.cur"
               />
    </StackPanel>
</UserControl>
